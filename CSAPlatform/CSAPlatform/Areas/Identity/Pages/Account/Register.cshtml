@page
@using DatabaseAccess.Enums
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .color_btn {
        color: #ffffff;
        background-color: #74b0b2;
        border-color: #5f9ea0;
    }

    .text_field_padding {
        padding: 1px 1px 10px;
    }

    .center-form {
        justify-content: center;
        display: flex;
        margin: 40px 50px;
        padding: 30px;
    }

</style>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating text_field_padding">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating text_field_padding">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating text_field_padding">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating text_field_padding">
                <input type="radio" asp-for="Input.UserRole" value="@RoleType.Student" />Student
                <input type="radio" asp-for="Input.UserRole" value="@RoleType.Employer" />Employer
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary color_btn">Register</button>
        </form>
    </div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
